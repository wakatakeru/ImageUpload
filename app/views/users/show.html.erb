<div class="container">
  <div class="row">
    <h1 class="text-center">ImageUpload :: User</h1>
    <h3 class="text-center"><%= @username %> さんのMyページ</h3>
    <hr />
    <h5 class="text-center"><%= @userbio %></h5>
    <hr />
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
    <div class="col-xs-12 col-sm-10 col-md-10">
      <h4>投稿作品</h4>
      <table class="table">
        <tread>
          <th>作品ID</th>
          <th>タイトル</th>
          <th>投稿日時</th>
        </tread>
        <tbody>
          <% if @userimg != nil %>
          <% @userimg.each do |f| %>
          <tr>
            <td><%= f[:id] %></td>
            <td><%= link_to "#{f[:title]}", image_path(f[:id]) %></td>
            <td><%= f[:updated_at] %></td>
          </tr>
          <% end %>
          <% end %>
        </tbody>
      </table>
      <p>
        <%= link_to '一覧表示へ戻る', images_path, class: "btn btn-success btn-lg btn-block" %>
      </p>
      
      <% if @session_id == @user_id %>
      
      <p>
        <%= link_to 'ユーザ情報を変更する', edit_user_path(@user.id), class: "btn btn-warning btn-lg btn-block" %>
      </p>
      
      <% end %>
      
      <p>
        <%= link_to 'ログアウトする', login_path, class: "btn btn-danger btn-lg btn-block", data: { :confirm => 'ログアウトします。よろしいですか？' }, :method => :delete %>
      </p>
    </div>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
  </div>
</div>
