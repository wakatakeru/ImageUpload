<div class="container">
  <div class="row">
    <h1 class="text-center">ImageUpload :: UserList</h1>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
    <div class="col-xs-12 col-sm-10 col-md-10">
      <table class="table">
        <tread>
          <tr>
            <th>ユーザID</th>
            <th>ログインID</th>
            <th>メールアドレス</th>
            <th>権限</th>
            <th>削除</th>
          </tr>
        </tread>
        <% @users.each do |f| %>
        <tbody>
          <td><%= f.id %></td>
          <td><%= link_to "#{f.login_id}", {:action => :show, :id => f.id} %></td>
          <td><%= f.email %></td>
          <% if f.is_admin == true %>
          <td><%= "あり" %></td>
          <% else %>
          <td><%= "なし" %></td>
          <% end %>
          <% if f.is_admin != true%>
          <td><%= link_to "削除", user_path(f.id), :method => "delete", :class => "btn btn-danger btn-xs", data: {confirm: "ユーザ #{f.login_id} を削除します。よろしいですか？"} %></td>
          <% else %>
          <td><%= link_to "削除", user_path(f.id), :class => "btn btn-danger btn-xs", :disabled => "disabled" %></td>
          <% end %>
        </tbody>
        <% end %>
      </table>
    <p>
      <%= link_to '一覧表示へ戻る', images_path, class: "btn btn-success btn-lg btn-block" %>
    </p>
    </div>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
  </div>
</div>
