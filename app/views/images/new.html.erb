<div class="container">
  <div class="row">
    <h1 class="text-center">ImageUpload :: Post</h1>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
    <div class="col-xs-12 col-sm-10 col-md-10">
      <% if notice != nil %>
      <div class="alert alert-info" role="alert">
        <%= notice %>
      </div>
      <% end %>

      <%= form_for @img do |f| %>
      <p><h4>タイトル</h4></p>
      <p><%= f.text_field :title, :class => "form-control" %></p>
      <p><h4>画像</h4></p>
      <p><%= f.file_field :file, accept: "image/jpeg" %></p>
      <p><%= f.submit :value => "投稿", :class => "btn btn-primary btn-lg btn-block" %></p>
      <p>
        <%= link_to '一覧表示へ戻る', images_path, class: "btn btn-danger btn-lg btn-block", data: {confirm: "変更は破棄されます。よろしいですか？"} %>
      </p>
      <% end %>
    </div>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
  </div>
</div>
