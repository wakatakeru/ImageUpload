<div class="container">
  <div class="row">
    <h1 class="text-center">ImageUpload :: PostEdit</h1>
    <h4 class="text-center">
      <font color="red">
        <strong><%= notice %></strong>
      </font>
    </h4>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
    <div class="col-xs-12 col-sm-10 col-md-10">
      <%= form_for @img do |f| %>
      <p>
        <h4>タイトル</h4>
        <%= f.text_field :title, :class => "form-control" %>
      </p>
      <p>
        <%= f.submit :value => "変更を保存する", :class => "btn btn-primary btn-lg btn-block", data: {confirm: "変更を保存します。よろしいですか？"} %>
      </p>
      <p>
        <%= link_to '一覧表示へ戻る', images_path, class: "btn btn-danger btn-lg btn-block", data: {confirm: "変更は破棄されます。よろしいですか？"} %>
      </p>

      <% end %>
    </div>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
  </div>
</div>

