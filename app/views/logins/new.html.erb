<div class="jumbotron" background="<%= asset_path 'icon.png' %>">
<div class="container">
  <div class="row-xs-2">
    <h1 class="text-center">ImageUpload :: Login</h1>
    <h4 class="text-center">
      <font color="red">
        <strong><%= notice %></strong>
      </font>
    </h4>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
    <div class="col-xs-12 col-sm-10 col-md-10">
      <%= form_tag login_path do %>
      <p><h4>ログインID</h4></p>
      <p>
        <%= text_field_tag :login_id, params[:login_id], :class => "form-control", :placeholder => "ログインID(英数字のみ)" %>
      </p>
      <p><h4>パスワード</h4></p>
      <p>
        <%= password_field_tag :password, params[:password], :class => "form-control", :placeholder => "パスワード(英数字のみ)" %>
      </p>
      <p>
        <%= submit_tag "ログイン", :class => "btn btn-primary btn-lg btn-block" %>
      </p>        
      <% end %>
      <p>
        <%= link_to "アカウント作成", new_user_path, :class => "btn btn-success btn-lg btn-block" %>
      </p>
    </div>
    <div class="col-xs-0 col-sm-1 col-md-1"></div>
  </div>
</div>
</div>
